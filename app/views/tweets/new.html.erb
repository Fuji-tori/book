<div class="contents row">
  <div class="container">
    <%= form_with(model: @tweet, local: true) do |form| %>
      <h3>
        投稿する
      </h3>
      <%= form.text_field :name, placeholder: "本のタイトル" %>
      <%= form.select :genre,['総記','哲学','歴史','社会','技術、工学','産業','芸術、美術','言語','小説','絵本','その他'], {include_blank: '---'} %>
      <%= form.text_field :author, placeholder: "著者" %>
      <%= form.text_area :text,type:"hidden", placeholder: "内容" , rows: "10" %>
      <%= form.text_field :image,placeholder: "画像URL" %>
      <%= form.text_area :review,placeholder:"感想" %>
      <%= form.submit "SEND" %>
    <% end %>
  </div>
</div>